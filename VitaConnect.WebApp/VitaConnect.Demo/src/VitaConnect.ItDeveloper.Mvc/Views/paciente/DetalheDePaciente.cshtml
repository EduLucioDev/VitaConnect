@using VitaConnect.ItDeveloper.Mvc.Controllers;

@model Paciente

@{
	ViewData["Tittle"] = "Detalhes de Paciente";
}

<div class="row">
	<div class=" panel panel-heading">
		<h3>
			Detalhe de Paciente
		</h3>
	</div>
	<div class="panel-body">
		<div class="col-md-12">
			<form asp-controller="Paciente" asp-action="AdicionarPaciente" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" name="Id" value="@Model.Id" id="Id" />
			<div class="row">
				<div class="panel panel-default">
					<div class="panel panel-heading">
						<h3>Dados cadastrais</h3>
					</div>
				</div>
				<ul>
					<li><b>Id do Paciente:</b><span style="font-size:18px; color:#ed5353; font-stretch:expanded;">@Model.Id</span></li>
					<li><b>Nome do Paciente:</b><span style="font-size:18px; color:#ed5353; font-stretch:expanded;">@Model.Nome</span></li>
					<li><b>CPF do Paciente:</b><span style="font-size:18px; color:#ed5353; font-stretch:expanded;">@Model.Cpf</span></li>
				</ul>
			</div>
			<div class="row">
				<div class="panel panel-success">
					<div class="panel panel-heading">
						<h3>Telefone do Paciente</h3>
					</div>
				</div>
				<hr />
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Id do Telefone</th>
							<th>Tipo do telefone</th>
							<th>Número</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var telefone in Model.Telefones)
						{
							<tr>
								<td>@telefone.Id</td>
								<td>@telefone.TipoDeTelefone</td>
								<td>@telefone.Numero</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
		<div class="form-group">
			<div action="row">
			<a class="btn btn-info" href="javascript:void()" title="Editar Paciente">Editar Paciente</a>
			<a class="btn btn-danger" href="javascript:void()" title="Editar Paciente">Excluir Paciente</a>
			</div>
		</div>
	</div>
</div>